<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Length"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:text="+"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/pwdLen"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:ems="10"
            android:enabled="true"
            android:text="0"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <CheckBox
            android:id="@+id/upCheckBox"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Upper Case"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Min."
            android:textAlignment="center" />

        <Button
            android:id="@+id/plusButton1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="+" />

        <TextView
            android:id="@+id/minUp"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:ems="10"
            android:text="0"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/minusButton1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <CheckBox
            android:id="@+id/lowCheckBox"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Lower Case" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Min."
            android:textAlignment="center" />

        <Button
            android:id="@+id/plusButton2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="+" />

        <TextView
            android:id="@+id/minLo"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:ems="10"
            android:text="0"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/minusButton2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <CheckBox
            android:id="@+id/digitCheckBox"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:text="Digits" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Min."
            android:textAlignment="center" />

        <Button
            android:id="@+id/plusButton3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="+" />

        <TextView
            android:id="@+id/minDi"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:ems="10"
            android:text="0"
            android:textAlignment="center"
            android:textSize="14sp" />

        <Button
            android:id="@+id/minusButton3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="10"
            android:enabled="false"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/symbolCheckBox"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="15"
                    android:text="Symbols" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Min."
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/plusButton4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:enabled="false"
                    android:text="+" />

                <TextView
                    android:id="@+id/minSy"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/minusButton4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="10"
                    android:enabled="false"
                    android:text="-" />

            </LinearLayout>

            <EditText
                android:id="@+id/symTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:hint="Symbols"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/symbols" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/genPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate" />

    <TextView
        android:id="@+id/pwdTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:selectAllOnFocus="true"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="24sp" />

</LinearLayout>